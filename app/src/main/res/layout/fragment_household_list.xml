<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="@dimen/dp8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/householdsTitle"
            style="@style/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginTop="@dimen/dp12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Пушкинская 15 Б" />

        <Button
            android:id="@+id/returnToBuildings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4"
            android:layout_marginEnd="@dimen/dp16"
            android:text="@string/my_buildings"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/buildingsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/householdsTitle" />

        <com.trendyol.bubblescrollbarlib.BubbleScrollBar
            android:id="@+id/bubble_scroll_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="right"
            android:orientation="vertical"
            app:bubbleBackground="@drawable/my_scroll"
            app:bubbleElevation="6dp"
            app:bubbleHeight="@dimen/dp48"
            app:bubbleMargin="@dimen/dp4"
            app:bubbleMinWidth="@dimen/dp48"
            app:bubblePadding="@dimen/dp4"
            app:bubbleTextColor="@color/white"
            app:bubbleTextSize="8sp"
            app:scrollbarBackground="@color/primary_variant"
            app:thumbBackground="@color/primary" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>